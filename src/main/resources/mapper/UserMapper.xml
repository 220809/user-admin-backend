<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dingzk.useradmin.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.dingzk.useradmin.model.domain.User">
            <id property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
            <result property="userAccount" column="user_account" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="avatarUrl" column="avatar_url" jdbcType="VARCHAR"/>
            <result property="gender" column="gender" jdbcType="TINYINT"/>
            <result property="slogan" column="slogan" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="tags" column="tags" jdbcType="VARCHAR"/>
            <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
            <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
            <result property="deleted" column="deleted" jdbcType="TINYINT"/>
            <result property="lastLoginAt" column="last_login_at" jdbcType="TIMESTAMP"/>
            <result property="userRole" column="user_role" jdbcType="TINYINT"/>
    </resultMap>

    <resultMap id="GroupUserResult" type="com.dingzk.useradmin.model.vo.UserVo">
        <id property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="avatarUrl" column="avatar_url" jdbcType="VARCHAR"/>
        <result property="gender" column="gender" jdbcType="TINYINT"/>
        <result property="slogan" column="slogan" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="tags" column="tags" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="lastLoginAt" column="last_login_at" jdbcType="TIMESTAMP"/>
        <result property="userRole" column="user_role" jdbcType="TINYINT"/>
    </resultMap>

    <select id="selectByUserId" resultMap="GroupUserResult">
        SELECT user_id, username, email, avatar_url, gender, slogan, status, tags, created_at,
               last_login_at, user_role
        FROM user
        WHERE user_id = #{userId}
    </select>
    
    <select id="selectSimilarUserByTag" resultType="map">
        SELECT user_id, tags
        FROM user
        WHERE tags != '[]' AND tags LIKE #{tag} AND deleted = 0;
    </select>
    
    <select id="selectUsersByUserIds" resultMap="BaseResultMap">
        SELECT
        user_id AS userId,username,email,
        user_account AS userAccount,password,avatar_url AS avatarUrl,
        gender,slogan,status,
        tags,created_at AS createdAt,updated_at AS updatedAt,
        deleted,last_login_at AS lastLoginAt,user_role AS userRole
        FROM user
        WHERE user_id IN
        <foreach collection="userIds" item="uid" open="(" separator="," close=")">
            #{uid}
        </foreach>
    </select>

    <select id="selectUsersByAndTags" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM user
        WHERE user_id IN (
            SELECT user_id FROM user
                           WHERE deleted=0 AND
            <foreach collection="tagList" item="tag" open="(" close=")" separator="AND">
                tags LIKE #{tag}
            </foreach>
        )
    </select>

    <sql id="Base_Column_List">
        user_id,username,email,
        user_account,password,avatar_url,
        gender,slogan,status,
        tags,created_at,updated_at,
        deleted,last_login_at,user_role
    </sql>
</mapper>
